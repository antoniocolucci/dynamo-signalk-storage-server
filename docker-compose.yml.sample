version: '3.3'

services:
  postgis:
    image: mdillon/postgis
    restart: unless-stopped
    environment:
      POSTGRES_USER: dynamo
      POSTGRES_PASSWORD: Dynamo2022
      POSTGRES_DB: dynamo
    ports:
      - 5432:5432
    networks:
      - dynamo


  rabbitmq:
    image: rabbitmq
    restart: unless-stopped
    ports:
      - 5672:5672
    networks:
      - dynamo

  dynamo-storage:
    image: dynamo-signalk-storage-server
    restart: unless-stopped
    ports:
      - 13387:13387
    networks:
      - dynamo

networks:
  dynamo:
